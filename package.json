{
    "name": "shopify-simulator",
    "version": "1.0.2",
    "description": "Shopify simulator template",
    "main": "server.js",
    "prettier": {
        "plugins": [
            "@shopify/prettier-plugin-liquid"
        ],
        "printWidth": 80,
        "useTabs": false,
        "tabWidth": 4,
        "singleQuote": true
    },
    "scripts": {
        "dev": "NODE_ENV=development node server.js",
        "build": "webpack --mode production",
        "start": "node server.js"
    },
    "keywords": [
        "shopify",
        "javascript",
        "liquid"
    ],
    "author": "miguelgradi",
    "license": "ISC",
    "dependencies": {
        "express": "^4.21.2",
        "liquidjs": "^10.20.1"
    },
    "devDependencies": {
        "@shopify/prettier-plugin-liquid": "^1.9.0",
        "copy-webpack-plugin": "^13.0.0",
        "css-loader": "^6.7.3",
        "css-minimizer-webpack-plugin": "^7.0.2",
        "mini-css-extract-plugin": "^2.9.2",
        "npm-run-all": "^4.1.5",
        "prettier": "^3.5.3",
        "sass": "^1.62.0",
        "sass-loader": "^16.0.5",
        "style-loader": "^3.3.2",
        "terser-webpack-plugin": "^5.3.14",
        "webpack": "^5.88.0",
        "webpack-cli": "^5.1.4",
        "webpack-dev-middleware": "^7.4.2"
    }
}
