{% assign settings = settings['featured-products'].settings %}
{% assign initial_prd = settings.initial_products %}

<section class='featured'>
    <h2 class='featured__title'>
        {{ settings.heading }}
    </h2>

    <div class='featured__list'>
        {% render 'product-loop', products: products, limit: initial_prd %}
    </div>

    {% if products.size > initial_prd %}
        <div class='featured__list hidden' id='products-extra'>
            {% render 'product-loop', products: products, offset: initial_prd %}
        </div>

        <button class='featured__more-btn'>Ver m√°s</button>
    {% endif %}
</section>
